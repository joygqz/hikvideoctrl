{
  "name": "hikvideoctrl",
  "type": "module",
  "version": "0.1.0",
  "description": "海康威视无插件视频播放 SDK 封装库，支持 TypeScript/ESM，提供设备管理、视频播放、PTZ控制、录像管理等完整功能。",
  "author": {
    "name": "joygqz",
    "email": "joygqz@gmail.com",
    "url": "https://github.com/joygqz"
  },
  "license": "MIT",
  "homepage": "https://github.com/joygqz/hikvideoctrl#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joygqz/hikvideoctrl.git"
  },
  "bugs": {
    "url": "https://github.com/joygqz/hikvideoctrl/issues"
  },
  "keywords": [
    "海康",
    "监控",
    "hik",
    "hikvision",
    "sdk",
    "video",
    "player",
    "video-player",
    "surveillance",
    "camera",
    "websocket",
    "no-plugin",
    "webrtc",
    "esm",
    "typescript",
    "ptz-control",
    "video-record",
    "playback",
    "nvr",
    "ipcamera",
    "hikvideo"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./*": "./*"
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepack": "pnpm build",
    "prepare": "simple-git-hooks",
    "release": "bumpp && pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@microsoft/api-extractor": "^7.52.12",
    "bumpp": "^10.2.3",
    "eslint": "^9.35.0",
    "eslint-plugin-format": "^1.0.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.8.3",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
